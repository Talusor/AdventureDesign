<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@color/white"
        android:elevation="8dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_close"
            android:scaleType="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="설정"
            android:textSize="24sp"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <Space
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="알림음 설정"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/alarmSettingText"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Default"
                android:textSize="16sp"
                android:alpha="0.8"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="알림음 크기 설정"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/alarmVolumeText"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="100"
                android:textSize="16sp"
                android:alpha="0.8"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="환기 알림 설정"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ventSettingText"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Default"
                android:textSize="16sp"
                android:alpha="0.8"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="환기 메세지 설정"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ventMessageText"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="%N분마다 환기를 권장합니다."
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:alpha="0.8"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.25"/>


</LinearLayout>